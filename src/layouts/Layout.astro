---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

		<slot name="head" />
	</head>
	<body>
		<slot />
		<footer>
			<p>
				Made with ‚ù§ by Guirdo
			</p>
		</footer>
	</body>
</html>
<style is:global>
	:root {
  /* Font */
  --font: 'Inconsolata', monospace;
  --scale: 1.15;
  --stack: clamp(1.25ex, 2.5vmax, 1.75ex);  

  --fs-md: clamp(1rem, 1rem + 0.5vi, 1.35rem);
  --fs-sm: calc(var(--fs-md) / var(--scale) );
  --fs-xs: calc(var(--fs-sm) / var(--scale) );
  --fs-xxs: calc(var(--fs-xs) / var(--scale) );
  --fs-lg: calc(var(--fs-md) * var(--scale) );
  --fs-xlg: calc(var(--fs-lg) * var(--scale) );
  --fs-xxlg: calc(var(--fs-xlg) * var(--scale) );

  /* Color */
  --mermaid: hsl(265 52% 10%);
  --roqueta: hsl(18, 45%, 45%);

  --primary: hsl(265 52% 10%);
  --secondary: hsl(240, 6%, 52%);
  --secondary-light-1: 	hsl(240, 24%, 80%);
  --white: hsl(240, 7%, 95%);
  --white-100: hsl(240 7% 95% / 50%) ;
  --dark: 	hsl(264, 63%, 3%);

  --shadow: hsl(0 0% 0% / 0.35);

  /* Spacing */
  --s-xxs: 0.5rem;
  --s-xs: 1rem;
  --s-sm: 1.25rem;
  --s-md: 1.5rem;
  --s-lg: 1.75rem;
  --s-xlg: 2rem;
}

:root:has(#mermaid:checked) {
  --primary: hsl(265 52% 10%);
  --secondary: hsl(240, 6%, 52%);
  --secondary-light-1: 	hsl(240, 24%, 80%);
  --white: hsl(240, 7%, 95%);
  --white-100: hsl(240 7% 95% / 50%) ;
  --dark: 	hsl(264, 63%, 3%);
}

:root:has(#roqueta:checked) {
  --primary: hsl(18, 45%, 45%);
  --secondary: 	hsl(214, 49%, 71%);
  --secondary-light-1:	hsl(194, 100%, 97%);
  --white: 	hsl(201, 35%, 92%);
  --white-100: hsl(201 35% 92% / 50%);
  --dark:	hsl(205, 100%,5%);
}

	/* Source: https://andy-bell.co.uk/a-modern-css-reset/ */

/* Box sizing rules */
*,
*::before,
*::after {
  box-sizing: border-box;
  margin: 0;
  padding: 0;
}

html, body {
  font-family: var(--font);
  font-size: var(--fs-md);
  height: 100vh;
}

/* Remove list styles on ul, ol elements with a list role, which suggests default styling will be removed */
ul[role='list'],
ol[role='list'] {
  list-style: none;
}

/* Set core root defaults */
html:focus-within {
  scroll-behavior: smooth;
}

/* Set core body defaults */
body {
  min-height: 100vh;
  text-rendering: optimizeSpeed;
  line-height: 1.5;
  height: 100%;
}

/* A elements that don't have a class get default styles */
a:not([class]) {
  text-decoration-skip-ink: auto;
}

/* Make images easier to work with */
img,
picture {
  max-width: 100%;
  display: block;
}

/* Inherit fonts for inputs and buttons */
input,
button,
textarea,
select {
  font: inherit;
}

h1,h1,h3 { line-height: 1.1; }

h1 {
  font-size: var(--fs-xxlg);
}

h2 {
  font-size: var(--fs-xlg);
}

h3 {
  font-size: var(--fs-lg);
}

section { width: 100% }

label { font-weight: bold }

input { padding: calc(var(--s-xs) / 2) }

textarea {
  resize: none;
  padding: calc(var(--s-xs) / 2);
}

code {
  background-color: var(--secondary-light-1);
  font-family: 'Courier New', Courier, monospace;
  padding: calc(var(--fs-sm) / 6 );
  border-radius: 0.25rem;
}

/* Remove all animations, transitions and smooth scroll for people that prefer not to see them */
@media (prefers-reduced-motion: reduce) {
  html:focus-within {
   scroll-behavior: auto;
  }
  
  *,
  *::before,
  *::after {
    animation-duration: 0.01ms !important;
    animation-iteration-count: 1 !important;
    transition-duration: 0.01ms !important;
    scroll-behavior: auto !important;
  }
}

:where(h1,h2,h3) {
  margin-block-start: calc(var(--stack) * 1.5);
}

:where(h1, h2, h3) + *:not(h1, h2, h3,div) {
  margin-block-start: calc(var(--stack) / 1.5);
}

:where(p,iframe,aside,canvas) {
  margin-block-start: calc(var(--stack) / 1.5);
}

:where(h1,h2,h3:is(:first-of-type)) {
  margin-block-start: 0;
}

body{
		padding: 2rem;
	}
</style>

<style>
	footer
	{
		text-align: center;
		font-size: var(--fs-xxs);
		padding: 0.5rem;
	}
</style>
